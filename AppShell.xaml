<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Tristate.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Tristate"
    Shell.FlyoutBehavior="Disabled"
    Title="Tristate"
    >

    <TabBar Title="TabBar Title">
        <ShellContent 
            Title="MOTD" 
            ContentTemplate="{DataTemplate local:MotdPage}" 
            Icon="envelope.svg">
        </ShellContent>
        <ShellContent 
            Title="Weather" 
            ContentTemplate="{DataTemplate local:WeatherPage}" 
            Icon="cloud.svg">
        </ShellContent>
        <ShellContent 
            Title="Calendar" 
            ContentTemplate="{DataTemplate local:CalendarPage}" 
            Icon="calendar.svg">
        </ShellContent>
        <ShellContent 
            Title="Social" 
            ContentTemplate="{DataTemplate local:SocialPage}" 
            Icon="user_group.svg">
        </ShellContent>
        <ShellContent 
            Title="Settings" 
            ContentTemplate="{DataTemplate local:SettingsPage}" 
            Icon="gears.svg">
        </ShellContent>
    </TabBar>

</Shell>
